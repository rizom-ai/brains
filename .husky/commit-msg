# Check if commit message follows conventional commit format
if ! grep -qE '^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\([a-z-]+\))?: .+' "$1"; then
  echo "Commit message format error!"
  echo "Please use the conventional commit format:"
  echo "  type(scope): description"
  echo ""
  echo "Examples:"
  echo "  feat(api): add new endpoint for user profile"
  echo "  fix(ui): correct button alignment issue"
  echo "  docs: update README with setup instructions"
  exit 1
fi