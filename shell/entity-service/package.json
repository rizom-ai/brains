{
  "name": "@brains/entity-service",
  "version": "0.1.0",
  "description": "Entity service for managing brain entities with database persistence and serialization",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun src/migrate.ts",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@brains/embedding-service": "workspace:*",
    "@brains/job-queue": "workspace:*",
    "@brains/utils": "workspace:*",
    "@libsql/client": "^0.15.7",
    "drizzle-orm": "^0.44.4",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@brains/eslint-config": "workspace:*",
    "@brains/typescript-config": "workspace:*",
    "@types/bun": "^1.1.14",
    "drizzle-kit": "^0.31.4",
    "typescript": "~5.7.2"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./migrate": "./src/migrate.ts"
  },
  "files": [
    "src"
  ]
}
