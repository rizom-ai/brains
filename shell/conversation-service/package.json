{
  "name": "@brains/conversation-service",
  "version": "1.0.0",
  "description": "Conversation storage and retrieval service for Personal Brain",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./migrate": "./src/migrate.ts"
  },
  "scripts": {
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@brains/messaging-service": "workspace:*",
    "@brains/utils": "workspace:*",
    "@libsql/client": "^0.15.7",
    "drizzle-orm": "^0.44.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
