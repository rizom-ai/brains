{
  "name": "@brains/conversation-service",
  "version": "1.0.0",
  "description": "Conversation storage and retrieval service for Personal Brain",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@brains/utils": "workspace:*",
    "@brains/messaging-service": "workspace:*",
    "drizzle-orm": "^0.44.4",
    "@libsql/client": "^0.15.9"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}