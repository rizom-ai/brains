    "@brains/app": "workspace:*",
    "@brains/core": "workspace:*",
    "@brains/permission-service": "workspace:*",
    "@brains/system": "workspace:*",
    "@brains/utils": "workspace:*",
    "chalk": "^5.4.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@brains/eslint-config": "workspace:*",
    "@brains/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "src"
  ]
