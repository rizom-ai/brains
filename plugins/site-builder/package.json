{
  "name": "@brains/site-builder-plugin",
  "version": "0.0.1",
  "description": "Static site generation plugin for Brain system",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "build": "bun run build:hydration",
    "build:hydration": "bun build:hydration.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@brains/content-management": "workspace:*",
    "@brains/entity-service": "workspace:*",
    "@brains/plugins": "workspace:*",
    "@brains/service-plugin": "workspace:*",
    "@brains/utils": "workspace:*",
    "@brains/view-registry": "workspace:*",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "esbuild": "^0.19.11",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@brains/eslint-config": "workspace:*",
    "@brains/test-utils": "workspace:*",
    "@brains/typescript-config": "workspace:*",
    "@types/bun": "^1.1.17",
    "eslint": "^8.48.0",
    "typescript": "^5.7.3",
    "@types/react": "^18.2.0"
  }
}
