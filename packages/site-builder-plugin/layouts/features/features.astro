---
import type { FeaturesLayoutProps } from './schema';

export type Props = FeaturesLayoutProps;

const { headline, subheadline, features } = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-text-dark mb-4">
        {headline}
      </h2>
      {subheadline && (
        <p class="text-xl text-text-gray max-w-3xl mx-auto">
          {subheadline}
        </p>
      )}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="text-4xl mb-4">{feature.icon}</div>
          <h3 class="text-xl font-semibold text-text-dark mb-2">
            {feature.title}
          </h3>
          <p class="text-text-gray">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>