---
import type { ProductsLayoutProps } from './schema';

export type Props = ProductsLayoutProps;

const { headline, subheadline, items } = Astro.props;
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-text-dark mb-4">
        {headline}
      </h2>
      {subheadline && (
        <p class="text-xl text-text-gray max-w-3xl mx-auto">
          {subheadline}
        </p>
      )}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {items.map((product) => (
        <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow p-6">
          <div class="flex items-center mb-4">
            <span class="text-4xl mr-3">{product.icon}</span>
            <h3 class="text-xl font-semibold text-text-dark">{product.name}</h3>
          </div>
          
          <p class="text-text-gray mb-4">{product.description}</p>
          
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-500">{product.category}</span>
            <span class={`text-sm px-2 py-1 rounded ${
              product.status === 'active' ? 'bg-green-100 text-green-800' : 
              product.status === 'beta' ? 'bg-blue-100 text-blue-800' : 
              'bg-gray-100 text-gray-800'
            }`}>
              {product.status}
            </span>
          </div>
          
          {product.link && (
            <a 
              href={product.link}
              class="mt-4 inline-block text-primary hover:text-primary-dark transition-colors"
            >
              Learn more â†’
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>