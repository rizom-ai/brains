{
  "name": "@brains/webserver-plugin",
  "version": "1.0.0",
  "description": "Webserver plugin for Personal Brain - generates and serves static sites",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "precompile": "cp src/content-schemas.ts src/content-schemas.txt",
