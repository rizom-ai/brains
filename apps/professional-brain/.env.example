# Professional Brain Development Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=file:./professional-brain.db

# AI Provider (Required)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# Server Configuration
BRAIN_SERVER_PORT=3333
BRAIN_SERVER_HOST=localhost
BRAIN_ENV=development

# Logging
LOG_LEVEL=debug  # debug, info, warn, error

# Directory Sync Plugin
SYNC_PATH=./brain-data
WATCH_ENABLED=true
WATCH_INTERVAL=2000

# Webserver Plugin - Preview enabled by default
PREVIEW_PORT=4321
# PREVIEW_DOMAIN=preview.your-domain.com

# Production deployment (optional)
# DOMAIN=your-domain.com
# PRODUCTION_PORT=8080

# Embedding model cache directory (optional, defaults to system temp)
# FASTEMBED_CACHE_DIR=/tmp/fastembed-cache
