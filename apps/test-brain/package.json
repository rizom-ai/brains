{
  "name": "@brains/test-brain",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "server": "bun run src/index.ts --server",
    "build": "bun build src/index.ts --compile --outfile dist/test-brain",
    "build:prod": "bun build src/index.ts --compile --minify --outfile dist/test-brain",
    "start": "./dist/test-brain",
    "start:server": "./dist/test-brain --server",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@brains/git-sync": "workspace:*",
    "@brains/mcp-server": "workspace:*",
    "@brains/shell": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "typescript": "^5.3.3"
  }
}