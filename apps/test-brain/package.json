{
  "name": "@brains/test-brain",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:cli": "bun run src/index.ts --cli",
    "dev:matrix": "bun run src/index.ts --matrix",
    "dev:all": "bun run src/index.ts --cli --matrix",
    "db:migrate": "DATABASE_URL=\"${DATABASE_URL:-file:./test-brain.db}\" bun ../../packages/db/src/migrate.ts",
    "precompile": "bun run db:migrate",
    "compile": "bun build src/index.ts --compile --outfile dist/test-brain",
    "compile:prod": "bun build src/index.ts --compile --minify --outfile dist/test-brain",
    "test": "bun test",
    "start": "./dist/test-brain",
    "start:cli": "./dist/test-brain --cli",
    "start:matrix": "./dist/test-brain --matrix",
    "start:all": "./dist/test-brain --cli --matrix",
    "matrix:setup": "bun run ../../packages/matrix-setup/src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@brains/app": "workspace:*",
    "@brains/cli": "workspace:*",
    "@brains/db": "workspace:*",
    "@brains/default-site-plugin": "workspace:*",
    "@brains/directory-sync": "workspace:*",
    "@brains/site-builder-plugin": "workspace:*",
    "@brains/webserver": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
