{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "dependsOn": ["precompile"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "precompile": {
      "outputs": ["src/content-schemas.txt"],
      "cache": true
    },
    "compile": {
      "dependsOn": ["precompile"],
      "outputs": ["dist/**"],
      "cache": true
    }
  }
}